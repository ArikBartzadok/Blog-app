{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/admin/categories/new" method="post">
            <label for="nome">Nome</label>
            <input type="text" id="name" name="name" placeholder="nome da categoria" class="form-control">
            <label for="slug">Slug</label>
            <input type="text" id="slug" name="slug" placeholder="slug da categoria" class="form-control">
            <br>
            <button type="submit" class="btn btn-info">Criar categoria</button>
        </form>
    </div>
</div>