<h2>Categorias</h2>
<hr>
<a href="/admin/categories/add">
    <button class="btn btn-info">Nova categoria</button>
</a>
{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>Slug: {{slug}}</small>
            <br />
            <small>Criada em: {{date}}</small>
        </div>
    </div>
{{else}}

{{/each}}