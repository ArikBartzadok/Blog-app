<h2>Categorias</h2>
<hr>
<a href="/admin/categories/add">
    <button class="btn btn-info">Nova categoria</button>
</a>
{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>Slug: {{slug}}</small>
            <br />
            <small>Criada em: {{date}}</small>
            <br />
            <a href="/admin/categories/edit/{{_id}}" class="mt-4">
                <button class="btn btn-warning">Editar</button>
            </a>
            <a href="/admin/categories/delete/{{_id}}">
                <button class="btn btn-danger">Deletar</button>
            </a>
        </div>
    </div>
{{else}}
    <h3 class="mt-3">Opos... Nenhuma categoria registrada</h3>
{{/each}}