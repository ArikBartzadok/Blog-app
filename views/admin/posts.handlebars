<h2>Publicações</h2>
<hr>
<a href="/admin/posts/add">
    <button class="btn btn-info">Nova publicação</button>
</a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{title}}</h4>
            <p>{{description}}</p>
            <small>Publicado em: {{date}}</small>
            <small>Tag: {{categorie.name}}</small>
            <br />
            <a href="/admin/posts/edit/{{_id}}" class="mt-4">
                <button class="btn btn-warning">Editar</button>
            </a>
            <a href="/admin/posts/delete/{{_id}}">
                <button class="btn btn-danger">Deletar</button>
            </a>
        </div>
    </div>
{{else}}
    <p>Ops... Nenhuma publicação pôde ser encontrada.</p>
{{/each}}